mixin employeeForm(url, employee, jobtitle, stateslist)

    form(action=url method='post')
        label(for='firstname') First Name:
        input(id='firstname' name='firstname' type='text' value=employee.firstname)

        label(for='lastname') Last Name:
        input(id='lastname' name='lastname' type='text' value=employee.lastname)

        label(for='jobtitle') Job Title:
        input(id='jobtitle' name='jobtitle' type='text' value=employee.jobtitle)
            each title in jobtitles
                option(value=title selected=employee.jobtitle===title) #{title}
        div.address
            div.streetline1
                label(for='streetline1') Street Line 1:
                input(id='streetline1' name='streetline1' type='text' value=employee.streetline1)

            div.streetline2
                label(for='streetline2') Street Line 2:
                input(id='streetline2' name='streetline2' type='text' value=employee.streetline2)
            div.territroy
                div.city
                    label(for='city') City:
                    input(id='city' name='city' type='text' value=employee.city)
                div.state
                    label(for='state') State:
                    input(id='state' name='state')
                        each state in stateslist
                            option(value=state selected=employee.state===state) #{state}

                div.zip
                    label(for='zip') Zip:
                    input(id='zip' name='zip' type='number' value=employee.zip)

        div.personal-info
            div.phone
                label(for='phonenumber') Phone Number:
                input(id='phonenumber' name='phonenumber' type='number' value=employee.phonenumber)

            div.year
                label(for='yearhired') Year Hired:
                input(id='yearhired' name='yearhired' type='text' value=employee.yearhired)

        button(type='submit') Submit